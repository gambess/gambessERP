{% extends 'CostoSystemBundle::layout.html.twig' %}
{% block content_header %}
<script type="text/javascript">
    $(document).ready(function() {
                        var name = $('#cuenta_nombre_cuenta');
                        name.val('Ingrese el nombre de la cuenta...');
                        name.focus(function() {
                            var default_name = name.val();
                            if(name.val() == default_name) $(this).val("");
                        })
			var Input = $('#cuenta_valor_cuenta');
                        Input.focus(function() {
                            var default_value = $(this).val();
                            if($(this).val() == default_value) $(this).val("");
                            }).blur(function(){
                                if($(this).val().length == 0) $(this).val(0);
                             });
});
</script>
                <ul id="menu">
                    {% block content_header_more %}
                        IR A:
                        <li><a class="symfony-button-green" href="{{ path('_homepage') }}">Principal</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_cuenta') }}">Cuentas</a></li>
                        <li><a class="symfony-button-green"  href="{{ path('index_gasto') }}">Gastos</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_venta') }}">Ventas</a></li>
                    {% endblock %}
                </ul>
                <div style="clear: both"></div>
{% endblock %}
{% block title %}Agregar Cuenta{% endblock %}
{% block content %}
<script type="text/javascript">
    $(document).ready(function() {
			
});
</script>
<h1><center>{{ block('title') }}</center></h1>
<form action="{{ path('create_cuenta') }}" method="post" {{ form_enctype(form) }}>
<h1><center>Formulario para Agregar Cuenta</center></h1>
    <div class="symfony-form-row">
        {{ form_label (form.nombre_cuenta) }}
            <div class="symfony-form-field">
                {{ form_widget (form.nombre_cuenta) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.nombre_cuenta) }}
                    </div>
            </div>
    </div>
    </p>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.valor_cuenta) }}
            <div class="symfony-form-field">
                {{ form_widget (form.valor_cuenta) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.valor_cuenta) }}
                    </div>
            </div>
    </div>
    </p>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.tipo_cuenta) }}
            <div class="symfony-form-field">
                {{ form_widget (form.tipo_cuenta) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.tipo_cuenta) }}
                    </div>
            </div>
    </div>
    </p>
        {{form_rest(form)}}
<br />
    <p align="right">
        <button class="symfony-button-green" type="submit">Grabar</button>
    </p>
</form>
{% endblock %}