<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="{{ asset('bundles/costosystem/css/demo.css') }}" type="text/css" media="all" />
        {% stylesheets
            '@CostoSystemBundle/Resources/public/css/*'
         %}
        <link rel="stylesheet" href="{{ asset( asset_url) }}"/>
        {% endstylesheets %}
        {% javascripts
            '@CostoSystemBundle/Resources/public/js/*'
         %}
        <script type="text/javascript" src="{{ asset( asset_url) }}"></script>
        {% endjavascripts %}
        <title>{% block title %}Demo Bundle{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="symfony-wrapper">
            <div id="symfony-header">
                <a href="{{ path('_homepage') }}">
                    <img src="{{ asset('bundles/costosystem/images/logo_small.png') }}" alt="Poncab">
                </a>
            </div>
            {% block content_header %}
                <ul id="menu">
                    {% block content_header_more %}
                        IR A:
                        <li><a class="symfony-button-green" href="{{ path('_homepage') }}">Principal</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_cuenta') }}">Cuentas</a></li>
                        <li><a class="symfony-button-green"  href="{{ path('index_gasto') }}">Gastos</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_venta') }}">Ventas</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_report') }}">Informes</a></li>
                    {% endblock %}
                </ul>
                <div style="clear: both"></div>
            {% endblock %}
            
            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
