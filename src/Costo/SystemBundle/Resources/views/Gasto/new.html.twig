{% extends 'CostoSystemBundle::layout.html.twig' %}
{% block content_header %}
{% javascripts
            '@CostoSystemBundle/Resources/public/js/jquery-1.7.2.min.js'
            '@CostoSystemBundle/Resources/public/js/jquery-ui-1.8.21.custom.min.js'
            '@CostoSystemBundle/Resources/public/js/ui/i18n/jquery.ui.datepicker-es.js'
            output='js/compiled/newgasto.js'
         %}
        <script type="text/javascript" src="{{ asset( asset_url) }}"></script>
        {% endjavascripts %}
<script type="text/javascript">
    $(document).ready(function() {
                        var name = $('#gasto_nombre_gasto');
                        name.val('Ingrese el nombre del gasto...');
                        name.focus(function() {
                            var default_name = name.val();
                            if(name.val() == default_name) $(this).val("");
                        })
			var Input = $('#gasto_costo_gasto');
                        Input.focus(function() {
                            var default_value = $(this).val();
                            if($(this).val() == default_value) $(this).val("");
                            }).blur(function(){
                                if($(this).val().length == 0) $(this).val(0);
                             });

                                $.datepicker.setDefaults( $.datepicker.regional[ "es" ] );
				// Datepicker
				$('#gasto_fecha_emision_gasto').datepicker({
                                        altFormat: "dd/mm/yyyy"
				});
                                // Datepicker
				$('#gasto_fecha_pago_gasto').datepicker({
                                        altFormat: "dd/mm/yyyy"
				});
			});
		</script>
                <ul id="menu">
                    {% block content_header_more %}
                        IR A:
                        <li><a class="symfony-button-green" href="{{ path('_homepage') }}">Principal</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_cuenta') }}">Cuentas</a></li>
                        <li><a class="symfony-button-green"  href="{{ path('index_gasto') }}">Gastos</a></li>
                        <li><a class="symfony-button-green" href="{{ path('index_venta') }}">Ventas</a></li>
                    {% endblock %}
                </ul>
                <div style="clear: both"></div>
{% endblock %}
{% block title %}Agregar Gasto{% endblock %}
{% block content %}
<h1><center>{{ block('title') }}</center></h1>
<form action="{{ path('create_gasto') }}" method="post" {{ form_enctype(form) }}>
<h1><center>Formulario para Agregar Gasto</center></h1>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.cuenta) }}
            <div class="symfony-form-field">
                {{ form_widget (form.cuenta) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.cuenta) }}
                    </div>
            </div>
    </div>
    </p>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.nombre_gasto) }}
            <div class="symfony-form-field">
                {{ form_widget (form.nombre_gasto) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.nombre_gasto) }}
                    </div>
            </div>
    </div>
    </p>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.costo_gasto) }}
            <div class="symfony-form-field">
                {{ form_widget (form.costo_gasto) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.costo_gasto) }}
                    </div>
            </div>
    </div>
    </p>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.fecha_emision_gasto) }}
            <div class="symfony-form-field">
                {{ form_widget (form.fecha_emision_gasto) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.fecha_emision_gasto) }}
                    </div>
            </div>
    </div>
    </p>
    <p>
    <div class="symfony-form-row">
        {{ form_label (form.fecha_pago_gasto) }}
            <div class="symfony-form-field">
                {{ form_widget (form.fecha_pago_gasto) }}
                    <div class="symfony-form-errors">
                        {{ form_errors (form.fecha_pago_gasto) }}
                    </div>
            </div>
    </div>
    </p>
        {{form_rest(form)}}
<br />
    <p align="right">
        <button class="symfony-button-green" type="submit">Grabar</button>
    </p>
</form>

{% endblock %}